<h1>Epicodus Postal Service</h1>

<form action="/output">
  <div class="form-group">
    <label for="length">Enter the length of your box</label>
    <input id="l" name="length" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="width">Enter the width of your box</label>
    <input id="w" name="width" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="heigth">Enter the heigth of your box</label>
    <input id="h" name="heigth" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="weight">Enter the weigth of your box</label>
    <input id="weight" name="weight" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>
